<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/preto"
            android:text="CÃ³digo Rotina" />

        <TextView
            android:id="@+id/textViewTituloRotina"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:textColor="@color/preto"
            android:text="Rotina: " />

        <TextView
            android:id="@+id/nomeRotina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/preto"
            android:text="Nome da Rotina"/>
    </TableRow>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fundocoluna">

            <TextView
                android:id="@+id/colunaAplicativo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/branco"
                android:text="Aplicativo" />

            <TextView
                android:id="@+id/ColunaTempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/branco"
                android:text="Tempo em Segundos"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewWhatsApp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/preto"
                android:text="WhatsApp" />

            <TextView
                android:id="@+id/tempoWhatsApp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/preto"
                android:text="Tempo"/>

            <TextView
                android:id="@+id/textIDWhatsApp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="invisible" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fundo">

            <TextView
                android:id="@+id/textViewInstagram"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/preto"
                android:text="Instagram" />

            <TextView
                android:id="@+id/tempoInstagram"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/preto"
                android:text="Tempo" />

            <TextView
                android:id="@+id/textIDInstagram"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="invisible" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textViewFacebook"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/preto"
                android:text="Facebook" />

            <TextView
                android:id="@+id/tempoFacebook"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/preto"
                android:text="Tempo" />

            <TextView
                android:id="@+id/textIDFacebook"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fundo">

            <TextView
                android:id="@+id/textViewResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/preto"
                android:text="Resultado" />
        </TableRow>
    </TableLayout>
</LinearLayout>