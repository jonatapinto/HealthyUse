<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/editDataInicio"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:hint="Data Inicial"
            android:layout_marginStart="8dp"
            android:inputType="date" />

        <EditText
            android:id="@+id/editDataFinal"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:hint="Data Final"
            android:inputType="date" />

    </LinearLayout>

    <Button
        android:id="@+id/botaoResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demonstrar Resultados"
        android:background="@color/fundocoluna"
        android:textColor="@color/branco"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linear"/>

    <ListView
        android:id="@+id/listViewResultados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:foregroundGravity="center"
        android:background="@android:color/background_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaoResult"/>

</android.support.constraint.ConstraintLayout>