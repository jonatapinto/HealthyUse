<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/botaoRotinas"
        android:layout_width="183dp"
        android:layout_height="83dp"
        android:layout_gravity="center"
        android:text="Rotinas" />

    <Button
        android:id="@+id/botaoParametros"
        android:layout_width="183dp"
        android:layout_height="83dp"
        android:layout_gravity="center"
        android:text="ParÃ¢metros" />

    <Button
        android:id="@+id/botaoResultado"
        android:layout_width="183dp"
        android:layout_height="83dp"
        android:layout_gravity="center"
        android:text="Resultados" />

    <Button
        android:id="@+id/botaoIniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        android:onClick="startService"/>

    <Button
        android:id="@+id/botaoParar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parar"
        android:onClick="stopService"/>

    <ListView
        android:id="@+id/listViewProcess"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>